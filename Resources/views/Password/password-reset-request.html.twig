{% extends 'Theme::layout.html.twig' %}
{% import 'Theme:Portal:User/macros.html.twig' as macros %}

{% block page_content %}
    <div class="breadcrumbs">
        {% show breadcrumbs %}
    </div>
    {{  macros.lockout_notice(phrase('portal.account.reset-password-lockout'), lockout, lockout_time) }}
    {% if auth_manager.isForgotPasswordVisible %}
        <header class="section-header">
            <h1>{{ phrase('portal.account.reset-password-request-title') }}</h1>
        </header>

       {{ phrase('portal.account.reset-password-request-desc') }}

        {% if render_error %}
            <strong>{{ phrase('portal.account.reset-password-invalid-input') }}</strong>
        {% endif %}

        <div class="form-ticket">
            {{ form_start(form) }}
            {{ form_rest(form) }}
            <button type="submit">{{ phrase('portal.account.reset-password-btn') }}</button>
            {{ form_end(form) }}
        </div>
    {% endif %}
{% endblock page_content %}
