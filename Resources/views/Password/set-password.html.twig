{% extends 'Theme::layout.html.twig' %}
{% import 'Theme:Portal:User/macros.html.twig' as macros %}

{% block page_content %}
    <div class="breadcrumbs">
        {% show breadcrumbs %}
    </div>
    {% if auth_manager.isForgotPasswordVisible %}
        <header class="section-header">
            <h1>{{ phrase('portal.account.section-title-set-password') }}</h1>
        </header>

        {% if from_saved %}
            {{ macros.user_notice('auth', phrase('portal.account.set-password-for-user')) }}
        {% endif %}

        {{ form_start(form) }}
        {{ form_rest(form) }}
        <button type="submit">{{ phrase('portal.account.set-password-btn') }}</button>
        {{ form_end(form) }}
    {% endif %}
{% endblock page_content %}
