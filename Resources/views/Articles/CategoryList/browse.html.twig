{% if category_children|length > 0 %}
  <div class="kb-home">
    {% for category in category_children %}
        <div class="column-half{% if loop.index0 % 2 == 1 %} omega{% endif %}">
            <article class="article-categories">
                <header>
                    <h1>
                        <i class="fa fa-star"></i>
                        <a href="{{ portal_path(category) }}">{{ object_phrase(category) }}</a>
                        <span class="count">({{ category_children_pagers[category.id]|length }})</span>
                    </h1>
                    <hr>
                </header>

                {% show kb_list_simple with {
                  category: category,
                  show_category_link: true,
                  count: 5,
                  with_tree: with_tree
                } %}
            </article>
        </div>
    {% endfor %}
  </div>
{% endif %}
